<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro" name="pioneer_robot">

  <!-- Chassis -->
  <link name="chassis">
  <visual>
    <origin xyz="0 0 0.16" rpy="0 0 0"/>
    <geometry>
      <mesh filename="package://pioneer_description/models/pioneer2dx/meshes/chassis.dae" scale="1 1 1"/>
    </geometry>
  </visual>

  <collision>
    <origin xyz="0 0 0.16" rpy="0 0 0"/>
    <geometry>
      <box size="0.445 0.277 0.17"/>
    </geometry>
  </collision>

  <inertial>
    <origin xyz="0 0 0.08" rpy="0 0 0"/>
    <mass value="5.67"/>
    <inertia ixx="0.07" ixy="0.0" ixz="0.0" iyy="0.08" iyz="0.0" izz="0.10"/>
  </inertial>
  </link>


  <!-- Front wheel yaw -->
  <link name="front_wheel_yaw">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.1"/>
      <inertia ixx="0.001" ixy="0.0" ixz="0.0" iyy="0.001" iyz="0.0" izz="0.001"/>
    </inertial>
  </link>

  <!-- Front wheel -->
<link name="front_wheel">
  <visual>
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <geometry>
      <sphere radius="0.08"/>
    </geometry>
    <material name="Red">
      <color rgba="1 0 0 1"/>
    </material>
  </visual>
  <collision>
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <geometry>
      <sphere radius="0.08"/>
    </geometry>
    <surface>
      <friction>
        <ode>
          <mu>50.0</mu>       <!-- сила трения вдоль движения -->
          <mu2>50.0</mu2>     <!-- сила трения поперёк движения -->
        </ode>
      </friction>
    </surface>
  </collision>
  <inertial>
    <mass value="1.0"/>
    <inertia ixx="0.002" iyy="0.002" izz="0.004" ixy="0" ixz="0" iyz="0"/>
  </inertial>
</link>

<!-- Left wheel -->
<link name="left_wheel">
  <visual>
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <geometry>
      <cylinder radius="0.15" length="0.1"/>
    </geometry>
    <material name="Green">
      <color rgba="0 1 0 1"/>
    </material>
  </visual>
  <collision>
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <geometry>
      <cylinder radius="0.15" length="0.1"/>
    </geometry>
    <surface>
      <friction>
        <ode>
          <mu>50.0</mu>       <!-- сила трения вдоль движения -->
          <mu2>50.0</mu2>     <!-- сила трения поперёк движения -->
        </ode>
      </friction>
    </surface>
  </collision>
  <inertial>
    <mass value="1.5"/>
    <inertia ixx="0.1" iyy="0.1" izz="0.1" ixy="0" ixz="0" iyz="0"/>
  </inertial>
</link>

<!-- Right wheel -->
<link name="right_wheel">
  <visual>
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <geometry>
      <cylinder radius="0.15" length="0.1"/>
    </geometry>
    <material name="Blue">
      <color rgba="${255/255} ${108/255} ${10/255} 1.0"/>
    </material>
  </visual>
  <collision>
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <geometry>
      <cylinder radius="0.15" length="0.1"/>
    </geometry>
    <surface>
      <friction>
        <ode>
          <mu>50.0</mu>       <!-- сила трения вдоль движения -->
          <mu2>50.0</mu2>     <!-- сила трения поперёк движения -->
        </ode>
      </friction>
    </surface>
  </collision>
  <inertial>
    <mass value="1.5"/>
    <inertia ixx="0.1" iyy="0.1" izz="0.1" ixy="0" ixz="0" iyz="0"/>
  </inertial>
</link>

  <!-- Camera -->
  <link name="camera_link">
    <visual>
      <geometry>
        <box size="0.1 0.1 0.1"/>
      </geometry>
    </visual>
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.1"/>
      <inertia ixx="0.0001" ixy="0.0" ixz="0.0" iyy="0.0001" iyz="0.0" izz="0.0001"/>
    </inertial>
  </link>

  <!-- IMU -->
  <link name="imu_link">
    <visual>
      <geometry>
        <box size="0.01 0.01 0.01"/>
      </geometry>
      <material name="Black"/>
    </visual>
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.01"/>
      <inertia ixx="1e-6" ixy="0.0" ixz="0.0" iyy="1e-6" iyz="0.0" izz="1e-6"/>
    </inertial>
  </link>

  <!-- Joints -->
  <joint name="left_wheel_hinge" type="revolute">
    <parent link="chassis"/>
    <child link="left_wheel"/>
    <origin xyz="-0.1 0.2 0.11" rpy="0 1.5707 1.5707"/>
    <axis xyz="0 0 1"/>
    <limit effort="10.0" velocity="10.0" lower="-1000" upper="1000"/>
  </joint>

  <joint name="right_wheel_hinge" type="revolute">
    <parent link="chassis"/>
    <child link="right_wheel"/>
    <origin xyz="-0.1 -0.2 0.11" rpy="0 1.5707 1.5707"/>
    <axis xyz="0 0 1"/>
    <limit effort="10.0" velocity="10.0" lower="-1000" upper="1000"/>
  </joint>

  <joint name="front_yaw_joint" type="revolute">
    <parent link="chassis"/>
    <child link="front_wheel_yaw"/>
    <origin xyz="0.19 0 0.05" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-0.785" upper="0.785" effort="5.0" velocity="1.0"/>
  </joint>


  <joint name="front_wheel_spin" type="continuous">
    <parent link="front_wheel_yaw"/>
    <child link="front_wheel"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
  </joint>

  <joint name="camera_joint" type="fixed">
    <parent link="chassis"/>
    <child link="camera_link"/>
    <origin xyz="0.2 0 0.25" rpy="0 0 0"/>
  </joint>

  <joint name="imu_joint" type="fixed">
    <parent link="chassis"/>
    <child link="imu_link"/>
    <origin xyz="0 0 0.2" rpy="0 0 0"/>
  </joint>

  <!-- Transmissions (ROS-control) -->
  <transmission name="left_wheel_trans">
    <type>transmission_interface/SimpleTransmission</type>
    <joint name="left_wheel_hinge">
      <hardwareInterface>EffortJointInterface</hardwareInterface>
    </joint>
    <actuator name="left_motor"/>
  </transmission>

  <transmission name="right_wheel_trans">
    <type>transmission_interface/SimpleTransmission</type>
    <joint name="right_wheel_hinge">
      <hardwareInterface>EffortJointInterface</hardwareInterface>
    </joint>
    <actuator name="right_motor"/>
  </transmission>

  <transmission name="front_yaw_trans">
    <type>transmission_interface/SimpleTransmission</type>
    <joint name="front_yaw_joint">
      <hardwareInterface>EffortJointInterface</hardwareInterface>
    </joint>
    <actuator name="front_yaw_motor"/>
  </transmission>

  <!-- Plugin for gazebo_ros_control -->
  <gazebo>
    <plugin name="gazebo_ros_control" filename="libgazebo_ros_control.so"/>
  </gazebo>
</robot>